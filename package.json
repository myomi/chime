{
  "name": "chime.scss",
  "version": "0.1.0",
  "description": "sass utilities",
  "main": "index.scss",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf build",
    "build": "yarn run clean && yarn run build:sass",
    "start": "yarn run build:sass -- --watch",
    "start:example": "yarn run build:example -- --watch",
    "build:sass": "node-sass --output build --importer node_modules/node-sass-package-importer/dist/cli.js --output-style expanded --source-map true chime.scss",
    "build:example": "node-sass --output example/fullscreen --importer node_modules/node-sass-package-importer/dist/cli.js --output-style expanded --source-map-embed true ./example/fullscreen/*.scss"
  },
  "devDependencies": {
    "node-sass": "^4.5.3",
    "node-sass-package-importer": "^3.0.4",
    "rimraf": "^2.6.1"
  },
  "dependencies": {
    "normalize.css": "^7.0.0"
  }
}
